<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM.Views.MasterPage"
             Title="Menu"
             BackgroundColor="Black">

    <StackLayout Padding="20" Spacing="20">

        <!-- Información del usuario -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Start">
            <Image Source="user_icon.png" WidthRequest="50" HeightRequest="50" />
            <Label Text="{Binding UserName}" 
               FontSize="Medium" 
               TextColor="White" 
               VerticalOptions="Center" 
               Margin="10,0"/>
        </StackLayout>

        <BoxView HeightRequest="2" BackgroundColor="White"/>

        <!-- Menú -->
        <Grid ColumnSpacing="15" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Row="0" Grid.Column="0" Source="home_icon.png" WidthRequest="30" HeightRequest="30"/>
            <Button Grid.Row="0" Grid.Column="1" Text="Inicio" Command="{Binding NavigateToInicioCommand}" 
                BackgroundColor="Transparent" TextColor="White" FontAttributes="Bold"/>

            <Image Grid.Row="1" Grid.Column="0" Source="nosotros_icon.png" WidthRequest="30" HeightRequest="30"/>
            <Button Grid.Row="1" Grid.Column="1" Text="Nosotros" Command="{Binding NavigateToNosotrosCommand}" 
                BackgroundColor="Transparent" TextColor="White" FontAttributes="Bold"/>

            <Image Grid.Row="2" Grid.Column="0" Source="contact_icon.png" WidthRequest="30" HeightRequest="30"/>
            <Button Grid.Row="2" Grid.Column="1" Text="Contacto" Command="{Binding NavigateToContactoCommand}"
                BackgroundColor="Transparent" TextColor="White" FontAttributes="Bold"/>

            <Button Grid.Row="3" Grid.ColumnSpan="2" Text="Cerrar Sesión" 
                    Command="{Binding LogoutCommand}" 
                    BackgroundColor="Red" TextColor="White" FontAttributes="Bold" 
                    HorizontalOptions="Center" Padding="10"/>

        </Grid>
    </StackLayout>
</ContentPage>