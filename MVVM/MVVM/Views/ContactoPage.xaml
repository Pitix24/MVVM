<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM.ContactoPage"
             BackgroundImageSource="fondo.png">

    <Grid>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center"
                     Padding="20" BackgroundColor="Black" Opacity="0.7"
                     WidthRequest="300">
            <Label Text="Contáctanos" FontSize="24" TextColor="White"
                   HorizontalOptions="Center" FontAttributes="Bold"/>

            <Entry Placeholder="Ingrese un nombre" TextColor="White" PlaceholderColor="LightGray"
                   BackgroundColor="Transparent"/>

            <Entry Placeholder="Ingrese un correo" TextColor="White" PlaceholderColor="LightGray"
                   BackgroundColor="Transparent" Keyboard="Email"/>

            <Editor Placeholder="Ingrese un mensaje" HeightRequest="100" TextColor="White" PlaceholderColor="LightGray"
                    BackgroundColor="Transparent"/>

            <Button Text="Enviar" BackgroundColor="White" TextColor="Black"
                    CornerRadius="5" Padding="10"/>
        </StackLayout>
    </Grid>
</ContentPage>
